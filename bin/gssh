#!/usr/bin/env bash
set -euo pipefail


SCRIPT_DIR=$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )
IFS=$'\n'

print_help() {
    echo "help"
}

while [[ $# -gt 0 ]]; do
    case $1 in
        -h|--help)
            print_help
            exit 0
            ;;
        --ignore-certificate)
            CERT=false
            shift
            ;;
        -i|--identity-path)
            SSH_IDENTITY="$2"
            shift 2
            ;;
        -u|--user)
            SSH_USER="$2"
            shift 2
            ;;
        -e|--ssh-extra-args)
            SSH_ARGS="$2"
            shift 2
            ;;
        -*)
            echo "Unknown option: $1"
            print_help
            exit 1
            ;;
        *)
            # Collect non-option arguments for the query
            query+="$1 "
            shift
            ;;
    esac
done

CERT=${CERT:-true}
SSH_IDENTITY=${SSH_IDENTITY:-"$HOME/.ssh/greeneye_id_ed25519"}
SSH_USER=${SSH_USER:-"yarok"}
SSH_ARGS=${SSH_ARGS:-"-Y -A"}
PATTERN="${query:-}"

if $CERT; then
    if ! bash -c "$SCRIPT_DIR/../scripts/validate-certificate.sh --key-path $SSH_IDENTITY"; then
        echo "error: failed to validate certificate."
        exit 1
    fi
else
    echo "ignoring certificate..."
fi

selection=$(bash -c "$SCRIPT_DIR/../scripts/get-device-selection.sh "$PATTERN"" | cut -d' ' -f1) || {
    echo "error: failed to get device selection"
    exit 1
}

ssh_cmd="ssh -i $SSH_IDENTITY $SSH_ARGS $SSH_USER@$selection"
bash -c "$ssh_cmd"

