#!/usr/bin/env bash
set -euo pipefail


SCRIPT_DIR=$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )
IFS=$'\n'
PATTERN=""

print_help() {
    cat << EOF
A tool to quickly switch between kubeconfig contexts using tailscale

Usage: gkx [OPTIONS] [PATTERN]

Options:
    -h, --help    Show this help message and exit
    --debug       run with debug information

Arguments:
    PATTERN       Optional pattern to filter output
EOF
}

while [[ $# -gt 0 ]]; do
    case $1 in
        -h|--help)
            print_help
            exit 0
            ;;
        --debug)
            DEBUG=true
            shift
            ;;
        -*)
            echo "Unknown option: $1"
            print_help
            exit 1
            ;;
        *)
            PATTERN="$PATTERN $1"
            shift
            ;;
    esac
done

if [ "${DEBUG:-false}" = "true" ]; then
    set -x
fi

if [ -z "$PATTERN" ]; then
    PATTERN="."
fi

PATTERN=$(echo "$PATTERN" | xargs)

selection=$(bash -c "$SCRIPT_DIR/../scripts/get-device-selection.sh --kubeconfig $PATTERN" | cut -d' ' -f1) || {
    echo "error: failed to get device selection"
    exit 1
}

ctx_cmd="tailscale configure kubeconfig $selection"
bash -c "$ctx_cmd"

